<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AppointmentScheduler.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppointmentScheduler.Views"
        xmlns:resources="clr-namespace:AppointmentScheduler.Resources"
        mc:Ignorable="d"
        Title="Sign in" 
        Height="550" 
        Width="450"
        MinHeight="500" 
        MinWidth="400"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <!-- Main layout background -->
    <Grid Background="{StaticResource PrimaryColorBrush}">

        <!-- Centered login card with responsive sizing -->
        <Border Width="320"
                MaxWidth="380"
                Padding="24"
                Background="White"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="20">

            <Grid>
                <!-- Structured grid rows for login UI -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title row -->
                    <RowDefinition Height="16"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Username label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Username textbox -->
                    <RowDefinition Height="12"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password box -->
                    <RowDefinition Height="16"/>
                    <!-- Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Sign-in button -->
                    <RowDefinition Height="Auto"/>
                    <!-- Error message -->
                </Grid.RowDefinitions>

                <!-- Header: Title + location info -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!-- Title text -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Location label -->
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{x:Static resources:Strings.Login_Title}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource SecondaryColorBrush}"/>

                    <TextBlock Grid.Column="1"
                               Name="locationLabel"
                               Text=""
                               FontSize="8"
                               FontWeight="Medium"
                               Foreground="#444"/>
                </Grid>

                <!-- Username label -->
                <TextBlock Grid.Row="2"
                           Text="{x:Static resources:Strings.Login_UsernameLabel}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryColorBrush}"
                           Margin="0,8,0,4"/>

                <!-- Username input box -->
                <TextBox Grid.Row="3"
                         Name="usernameTextBox"
                         Style="{StaticResource TextBoxStyle}"/>

                <!-- Password label -->
                <TextBlock Grid.Row="5"
                           Text="{x:Static resources:Strings.Login_PasswordLabel}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryColorBrush}"
                           Margin="0,8,0,4"/>

                <!-- Password input box -->
                <PasswordBox Grid.Row="6"
                             Name="passwordBox"
                             Style="{StaticResource PassWordBoxStyle}"/>

                <!-- Sign-in button -->
                <Button Grid.Row="8"
                        Name="signInButton"
                        Content="{x:Static resources:Strings.Login_Button}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="signInButton_Click"/>

                <!-- Error message shown under button -->
                <TextBlock Grid.Row="9"
                           x:Name="errorMessageTextBlock"
                           Text=""
                           FontSize="13"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</Window>
