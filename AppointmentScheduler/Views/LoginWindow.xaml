<Window x:Class="AppointmentScheduler.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppointmentScheduler.Views"
        xmlns:resources="clr-namespace:AppointmentScheduler.Resources"
        mc:Ignorable="d"
        Title="Sign in" Height="600" Width="900"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource PrimaryColorBrush}">
        <Border Width="320"
                Padding="24"
                Background="White"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <!-- Simple, safe row layout -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 0: Title -->
                    <RowDefinition Height="16"/>
                    <!-- 1: Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- 2: Username label -->
                    <RowDefinition Height="Auto"/>
                    <!-- 3: Username textbox -->
                    <RowDefinition Height="12"/>
                    <!-- 4: Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- 5: Password label -->
                    <RowDefinition Height="Auto"/>
                    <!-- 6: Password box -->
                    <RowDefinition Height="16"/>
                    <!-- 7: Spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- 8: Sign-in button -->
                    <RowDefinition Height="Auto"/>
                    <!-- 9: Error message (below button) -->
                </Grid.RowDefinitions>

                <!-- TITLE + LOCATION -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{x:Static resources:Strings.Login_Title}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource SecondaryColorBrush}"/>

                    <TextBlock Grid.Column="1"
                               Name="locationLabel"
                               Text=""
                               FontSize="12"
                               FontWeight="Medium"
                               Foreground="#444"/>
                </Grid>

                <!-- USERNAME LABEL -->
                <TextBlock Grid.Row="2"
                           Text="{x:Static resources:Strings.Login_UsernameLabel}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryColorBrush}"
                           Margin="0,8,0,4"/>

                <!-- USERNAME TEXTBOX -->
                <TextBox Grid.Row="3"
                         Name="usernameTextBox"
                         Style="{StaticResource TextBoxStyle}"/>

                <!-- PASSWORD LABEL -->
                <TextBlock Grid.Row="5"
                           Text="{x:Static resources:Strings.Login_PasswordLabel}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryColorBrush}"
                           Margin="0,8,0,4"/>

                <!-- PASSWORD BOX -->
                <PasswordBox Grid.Row="6"
                             Name="passwordBox"
                             Style="{StaticResource PassWordBoxStyle}"/>

                <!-- SIGN-IN BUTTON -->
                <Button Grid.Row="8"
                        Name="signInButton"
                        Content="{x:Static resources:Strings.Login_Button}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="signInButton_Click"/>

                <!-- ERROR MESSAGE BELOW BUTTON -->
                <TextBlock Grid.Row="9"
                           x:Name="errorMessageTextBlock"
                           Text=""
                           FontSize="13"
                           Foreground="Red"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>
    </Grid>
</Window>
