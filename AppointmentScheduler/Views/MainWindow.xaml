<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AppointmentScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppointmentScheduler"
        xmlns:resources="clr-namespace:AppointmentScheduler.Resources"
        xmlns:vm="clr-namespace:AppointmentScheduler.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="600" 
        Width="1000"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    

    <!-- Root grid split into navigation sidebar and content area -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" MinWidth="180" MaxWidth="300"/>
            <!-- Left navigation column -->
            <ColumnDefinition Width="*"/>
            <!-- Right content column -->
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Background="{StaticResource BorderColorBrush}">
            <!-- Navigation menu bound to NavigationItems collection -->
            <ListBox ItemsSource="{Binding NavigationItems}"
                     SelectedItem="{Binding SelectedNavigationItem}"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="White">

                <!-- Template for each navigation entry -->
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="8" Height="40">

                            <!-- MDL2 icon -->
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="{Binding Icon}"
                                       FontSize="18"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>

                            <!-- Title text -->
                            <TextBlock Text="{Binding Title}"
                                       FontSize="14"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>

            </ListBox>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Border Grid.Column="1"
                Background="{StaticResource PrimaryColorBrush}"
                Padding="16">

            <!-- Displays the active ViewModel's associated view -->
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>

    </Grid>
</Window>
