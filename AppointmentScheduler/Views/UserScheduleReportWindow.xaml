<Window x:Class="AppointmentScheduler.Views.UserScheduleReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consultant Schedule"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Border Style="{StaticResource CardBorderStyle}"
                Padding="12">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="Consultant Schedule"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <DataGrid x:Name="ReportDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User"
                                            Binding="{Binding UserName}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Appointment #"
                                            Binding="{Binding AppointmentId}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Customer"
                                            Binding="{Binding CustomerName}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="Type"
                                            Binding="{Binding Type}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Start"
                                            Binding="{Binding StartLocal, StringFormat=\{0:g\}}"
                                            Width="2*"/>
                        <DataGridTextColumn Header="End"
                                            Binding="{Binding EndLocal, StringFormat=\{0:g\}}"
                                            Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
