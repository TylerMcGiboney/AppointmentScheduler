<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AppointmentScheduler.Views.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="600"
        Width="800"
        MinHeight="500"
        MinWidth="600"
        MaxHeight="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <!-- Main background and centering container -->
    <Grid Background="{StaticResource PrimaryColorBrush}">
        <Border Style="{StaticResource CardBorderStyle}"
                Margin="16"
                Padding="20">

            <!-- Main layout with ScrollViewer -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="12"/>
                    <!-- Spacer -->
                    <RowDefinition Height="*"/>
                    <!-- Form with ScrollViewer -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- Header text -->
                <TextBlock Grid.Row="0"
                           Text="{Binding HeaderText}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,4"/>

                <!-- ScrollViewer for form content -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <!-- Two-column form layout -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" MinWidth="150"/>
                            <!-- Labels column -->
                            <ColumnDefinition Width="*" MinWidth="250"/>
                            <!-- Input column -->
                        </Grid.ColumnDefinitions>

                        <!-- Vertical layout for fields -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Name -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Active -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Phone -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Address -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Address2 -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- City -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- ZIP -->
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <!-- Country -->
                        </Grid.RowDefinitions>

                        <!-- Customer Name -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Content="Customer Name"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Text="{Binding CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"/>

                        <!-- Active checkbox -->
                        <Label Grid.Row="2" Grid.Column="0"
                               Content="Active"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <CheckBox Grid.Row="2" Grid.Column="1"
                                  IsChecked="{Binding IsActive, Mode=TwoWay}"
                                  Content="Customer is active"
                                  Margin="0,0,0,4"/>

                        <!-- Phone number -->
                        <Label Grid.Row="4" Grid.Column="0"
                               Content="Phone Number"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="4" Grid.Column="1"
                                 Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"/>

                        <!-- Address 1 -->
                        <Label Grid.Row="6" Grid.Column="0"
                               Content="Address"
                               VerticalAlignment="Top"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="6" Grid.Column="1"
                                 Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="40"/>

                        <!-- Address 2 -->
                        <Label Grid.Row="8" Grid.Column="0"
                               Content="Address 2"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="8" Grid.Column="1"
                                 Text="{Binding Address2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"/>

                        <!-- City -->
                        <Label Grid.Row="10" Grid.Column="0"
                               Content="City"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="10" Grid.Column="1"
                                 Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"/>

                        <!-- ZIP Code -->
                        <Label Grid.Row="12" Grid.Column="0"
                               Content="ZIP Code"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="12" Grid.Column="1"
                                 Text="{Binding PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"/>

                        <!-- Country -->
                        <Label Grid.Row="14" Grid.Column="0"
                               Content="Country"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                        <TextBox Grid.Row="14" Grid.Column="1"
                                 Text="{Binding Country, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,4"/>
                    </Grid>
                </ScrollViewer>

                <!-- Save / Cancel button row -->
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0">

                    <!-- Save button -->
                    <Button Content="{Binding PrimaryButtonText}"
                            Style="{StaticResource PrimaryFlatButton}"
                            Command="{Binding SaveCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Margin="0,0,8,0"/>

                    <!-- Cancel -->
                    <Button Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
