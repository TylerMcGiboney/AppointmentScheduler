<Window x:Class="AppointmentScheduler.Views.CustomerAppointmentsReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Appointments by Customer"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="12">
        <Border Style="{StaticResource CardBorderStyle}"
                Padding="12">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                           Text="Appointments by Customer"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <DataGrid x:Name="ReportDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Customer"
                                            Binding="{Binding CustomerName}"
                                            Width="3*"/>
                        <DataGridTextColumn Header="# of Appointments"
                                            Binding="{Binding AppointmentCount}"
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
