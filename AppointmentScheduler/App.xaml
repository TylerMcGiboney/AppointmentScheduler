<Application x:Class="AppointmentScheduler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AppointmentScheduler"
             xmlns:vm="clr-namespace:AppointmentScheduler.ViewModels"
             xmlns:views="clr-namespace:AppointmentScheduler.Views"
             >
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Themes/Dimensions.xaml"/>
                <ResourceDictionary Source="Resources/Themes/DataGrid.xaml"/>
                <ResourceDictionary Source="/Resources/Themes/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        
        
        

        <DataTemplate DataType="{x:Type vm:CalendarViewModel}">
            <views:CalendarView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
            <views:CustomerViews/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AppointmentsViewModel}">
            <views:AppointmentsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <views:ReportsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>




        </ResourceDictionary>
    </Application.Resources>
</Application>
