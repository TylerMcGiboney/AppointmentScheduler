             xmlns:local="clr-namespace:AppointmentScheduler"
             xmlns:vm="clr-namespace:AppointmentScheduler.ViewModels"
             xmlns:views="clr-namespace:AppointmentScheduler.Views"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/Colors.xaml"/>
